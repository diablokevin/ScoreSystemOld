@model IEnumerable<WebApplication1.Models.Score>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.eventTitle</h2>

<p>
    
    @Html.ActionLink("新评分", "Create", new { eventID = ViewBag.eventID })
</p>
<table class="table">
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.Event.Name)
        </th>
     
                <th>
                    @Html.DisplayNameFor(model => model.TimeConsume)
                </th>
               
       @if (ViewBag.IsTs == null ? false : ViewBag.IsTs)
       {
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
       }
       else
       {
        <th>
            @Html.DisplayNameFor(model => model.TimePenalty)
        </th>
       }


        <th>
            @Html.DisplayNameFor(model => model.Competitor.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JudgeTime)
        </th>
@{ if (User.IsInRole("Admin"))
    {
        <th>
            @Html.DisplayNameFor(model => model.ModifyTime)
        </th>
        }
    }
        <th>
            @Html.DisplayNameFor(model => model.Judge.Name)
        </th>
              
     
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td >
            @Html.DisplayFor(modelItem => item.Event.Name)
        </td>
@{ if (User.IsInRole("Admin"))
    {
        <td>
            @Html.DisplayFor(model => item.TimeConsume)
        </td>
     
        if (ViewBag.IsTs == null ? false : ViewBag.IsTs)
        {
            <th>
                @Html.DisplayFor(modelItem => item.Mark)
            </th>
        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.TimePenalty)
            </td>
        }
    }
    else
    {
        <td>*</td>
        <td>*</td>
    }
}
        
     <td>
         @Html.DisplayFor(model => item.Competitor.Company.Name)
     </td>
        <td>
            @Html.DisplayFor(modelItem => item.Competitor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JudgeTime)
        </td>
@{ if (User.IsInRole("Admin"))
    {
        <td>
            @Html.DisplayFor(modelItem => item.ModifyTime)
        </td>
        }
    }
        <td>
            @Html.DisplayFor(modelItem => item.Judge.Name)
        </td>
@{ if (User.IsInRole("Admin"))
    {
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
            @Html.ActionLink("详情", "Details", new { id = item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id = item.Id })
        </td>
        }
    }
    </tr>
}

</table>
